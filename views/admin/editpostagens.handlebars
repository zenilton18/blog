{{#each erros}}

<div class="alert alert-danger">{{texto}}</div>

{{else}}
{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem:</h4>
        <form action="/admin/postagens/edit" method="POST">
            <label for="titulo">Título</label>
            <input type="text" name="titulo" value="{{postagem.titulo}}" class="form-control">
            <label for="slug">Slug</label>
            <input type="text" name="slug"  value="{{postagem.slug}}"class="form-control">
            <label for="descricao">Descriçao</label>
            <input type="text" name="descricao"  value="{{postagem.descricao}}"class="form-control">
            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" class="form-control"  >{{postagem.conteudo}}</textarea>
            <label for="categorias">Categorias</label>
            <select name="categorias" class="form-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="0">Nenhuma categoria</option>
                {{/each}}
            </select>
            <button type="submit" class="btn btn-success mt-2"  >Editar Postagem</button>
        </form>
    </div>
</div>